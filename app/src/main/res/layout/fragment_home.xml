<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:tag="home_tag"
android:id="@+id/home_tag"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#E6000000"
tools:context=".MainActivity"
tools:ignore="HardcodedText">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="376dp"
        android:layout_height="208dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:elevation="12dp"

        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="174dp"
                    android:layout_height="170dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:id="@+id/textView7_"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:fontFamily="@font/aldrich"
                        android:text="Current Data"
                        android:textAlignment="viewEnd"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:outlineAmbientShadowColor="#602020">

                        <TextView
                            android:id="@+id/textView8_"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Date:"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/date_text_dash"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TextView"
                            android:textAlignment="center" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="28dp">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:text="pH:"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/ph_text_"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:outlineProvider="background"
                            android:text="7.1"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="28dp">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:text="Temp:"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/temp_text_"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="36"
                            android:textAlignment="center" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="28dp">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:text="Humidity:"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/hum_text_"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="80"
                            android:textAlignment="center" />
                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/custom_solution_message"
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="8dp"
                        android:padding="5dp"
                        android:text="Based on your current data, we have a smart adjustment "
                        android:textAlignment="viewEnd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp">

                        <Button
                            android:id="@+id/adjust_button"
                            android:layout_width="189dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/green_500"
                            android:padding="2dp"
                            android:text="Change Water"
                            android:textSize="12sp"
                            app:iconTint="@color/green_500"
                            app:rippleColor="@color/green_500" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="195dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <androidx.cardview.widget.CardView
            android:id="@+id/JournalCard"
            android:layout_width="184dp"
            android:layout_height="178dp"
            android:layout_margin="8dp"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:elevation="12dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="onJournalClick"
            app:cardCornerRadius="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="180dp"
                android:layout_height="180dp">

                <Button
                    android:id="@+id/journalBtn"
                    android:layout_width="181dp"
                    android:layout_height="227dp"
                    android:alpha=".00"
                    android:color="#66FF0000"
                    android:text="Button"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="74dp"
                    android:layout_height="78dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.717"
                    app:srcCompat="@drawable/pencil2" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Journal"
                    android:textAllCaps="true"
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.791" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/practiceCard"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="8dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:elevation="12dp"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="180dp"
                android:layout_height="180dp">

                <Button
                    android:id="@+id/cameraBtn"
                    android:layout_width="183dp"
                    android:layout_height="220dp"
                    android:alpha=".00"
                    android:color="#66FF0000"
                    android:text="Button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.19"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="181dp"
                    android:layout_height="239dp"
                    android:layout_marginBottom="6dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.6"
                    app:srcCompat="@drawable/data" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:gravity="center"
                    android:text="Analytics"
                    android:textAllCaps="true"
                    android:textColor="@color/green_500"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/cameraBtn"
                    app:layout_constraintVertical_bias="0.976" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:weightSum="2"

    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/learnCard"
        android:layout_width="378dp"
        android:layout_height="139dp"
        android:layout_margin="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:elevation="12dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sensorBtn"
                android:layout_width="378dp"
                android:layout_height="142dp"
                android:text="Button"
                android:alpha=".00"
                android:color="#66FF0000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sensor History"
                android:textAllCaps="true"
                android:textColor="@color/green_500"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="173dp"
                android:layout_height="105dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="7dp"
                android:src="@drawable/ll"
                app:layout_constraintBottom_toTopOf="@+id/textView21"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

<TextView
    android:id="@+id/textView4"
    android:layout_width="315dp"
    android:layout_height="35dp"
    android:layout_marginStart="18dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="15dp"
    android:fontFamily="@font/aldrich"
    android:text="RAD-DASHBOARD"
    android:textAllCaps="true"
    android:textColor="@color/green_500"
    android:textSize="32sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/cardView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
