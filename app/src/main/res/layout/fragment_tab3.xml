<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.analytics.tabs.tab3_humidity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="599dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="30dp"
        android:background="#000000"
        android:backgroundTint="#000000"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="622dp"
            android:orientation="vertical">

            <com.androidplot.xy.XYPlot
                android:id="@+id/humPlot"
                android:layout_width="match_parent"
                android:layout_height="403dp"
                android:layout_gravity="center_horizontal"
                app:backgroundColor="#1A213A"

                app:graphHeight="330dp"
                app:graphHeightMode="absolute"
                app:graphWidth="365dp"
                app:graphWidthMode="absolute"

                app:legendAnchor="bottom_middle"

                app:legendIconHeightMode="absolute"
                app:legendWidthMode="fill"
                app:lineLabelAlignLeft="left"

                app:lineLabels="left|bottom"
                app:paddingBottom="@dimen/margin_large"
                app:paddingTop="@dimen/margin_medium"
                app:rangeTitle="Humidity values [%]"
                app:domainTitle="Instance No."
                app:domainTitleTextSize="16sp"

                app:title="15 most recent humidity Values"
                app:titleTextSize="@dimen/margin_medium"
                app:rangeTitleTextSize="16sp"
                app:legendVisible="false"

                />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="#F7F7F7"
                android:backgroundTint="#FFFFFF"
                android:padding="5dp"
                android:text="Humidity plot:Relative Humidity (rh) is the measure of the water vapor content of air. This value is measured as a percentage, so it will vary depending on the location. \n\nHumidity typically isn't an issue as long as adequate soil moisture is maintained and there's good air flow around the plants."
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>